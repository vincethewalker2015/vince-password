<div class ="center well">
    <h2 class="text-center white">Password Details for: <%= @password.name %></h2>
    <h3 class="text-center white">User: <%= current_user.name %> <%= " 'Admin User'" if current_user.admin?%>
    <% if @password.groups? %>
      <h3 class="text-center white">Group: <%= @password.groups %></h3>
    <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
          <p><span class="bold-white">User Name: </span><span class="light-blue"><%= @password.user_name %></span></p>
          <p><span class="bold-white">Password:  </span><span class="green"> <%= @password.password %></span></p>
          <p class="splits"><span class="bold-white">Notes: </span><span><%= format_linebreaks @password.notes %></span></p>
      
        <div class="text-center">
          <% if current_user && current_user.admin? %>
          <%= link_to "Edit Password Details", edit_password_path(@password), class: "btn btn-warning" %><br /><br />
          <% end %>
          <%= link_to "Back to Index", passwords_path, class: "btn btn-success" %> 
        </div>
      </div>
    </div>
  </div>
</div>