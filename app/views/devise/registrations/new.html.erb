

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
    <h2 class="text-center white">Create New User</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field form-group">
          <%= f.label :name, class: "white" %><br />
          <%= f.text_field :name, autofocus: true, class: 'form-control bg-green', placeholder: "Name of User" %>
        </div>
        <div class="field form-group">
          <%= f.label :email, class: "white" %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control bg-green', placeholder: "User email" %>
        </div>
        <div class="field form-group">
          <%= f.label :password, class: "white" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control bg-green', placeholder: "Choose Password" %>
        </div>
        <div class="field form-group">
          <%= f.label :password_confirmation, class: "white" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control bg-green', placeholder: "Re enter Password" %>
        </div>
        <div class="actions form-group">
          <%= f.submit "Sign up", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


